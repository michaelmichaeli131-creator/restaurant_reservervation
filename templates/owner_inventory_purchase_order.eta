        <input type="hidden" name="lines" id="po-lines-input" value="[]">

        <div class="row" style="margin-bottom:12px">
          <label class="lbl">
            ×¦×¤×™ ××¡×¤×§×”
            <input
              name="expectedAt"
              type="date"
              value="<%= fmtDateInput(po.expectedAt) %>"
              <%= editable ? '' : 'disabled' %>
            >
          </label>

          <label class="lbl" style="min-width:260px;flex:1">
            ×”×¢×¨×•×ª ×œ×”×–×× ×”
            <input
              name="note"
              value="<%= esc(po.note || '') %>"
              placeholder="××™×“×¢ × ×•×¡×£ ×œ×¡×¤×§ ××• ×œ×¦×•×•×ª"
              <%= editable ? '' : 'disabled' %>
            >
          </label>
        </div>

        <div class="table">
          <div class="tr th">
            <div>×—×•××¨ ×’×œ×</div>
            <div>×›××•×ª</div>
            <div>×™×—×™×“×ª ××™×“×”</div>
            <div></div>
          </div>

          <!-- ×©×•×¨×•×ª ×§×™×™××•×ª -->
          <% lines.forEach(function(line, idx){ %>
            <div
              class="tr po-line"

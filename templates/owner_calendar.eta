<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8" />
  <title><%= it.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/static/css/owner_calendar.css" />
  <style>
    /* פריסה: Panel (טבלה) בימין, Sidebar (יומן) בשמאל — גם תחת RTL */
    .oc-layout{
      direction: ltr !important;
      display:grid !important;
      grid-template-columns: 360px minmax(980px,1fr);
      gap:16px; align-items:start; padding:16px;
    }
    .oc-sidebar{ grid-column:1/2 !important; background:#fff;border:1px solid #e5e7eb;border-radius:12px;padding:12px; }
    .oc-panel  { grid-column:2/3 !important; overflow:auto; }
    @media (max-width: 900px){
      .oc-layout{ grid-template-columns: 1fr !important; }
      .oc-sidebar{ grid-column:1/-1 !important; grid-row:2 !important; }
      .oc-panel  { grid-column:1/-1 !important; grid-row:1 !important; }
    }

    .oc-slots{ min-width: 980px; }
    .oc-section-title{font-weight:600;margin:8px 0 12px;}

    /* יומן חודשי */
    .mini-cal{user-select:none}
    .mini-cal .hdr{display:flex;align-items:center;justify-content:space-between;margin-bottom:8px}
    .mini-cal .hdr .nav{display:flex;gap:8px}
    .mini-cal .hdr button{border:1px solid #e5e7eb;background:#fafafa;border-radius:8px;padding:6px 10px;cursor:pointer}
    .mini-cal table{width:100%;border-collapse:collapse}
    .mini-cal th,.mini-cal td{text-align:center;padding:6px 0;width:14.285%}
    .mini-cal th{color:#6b7280;font-weight:600}
    .mini-cal td button{width:34px;height:34px;line-height:34px;border-radius:8px;border:none;background:transparent;cursor:pointer}
    .mini-cal td .out{opacity:.35}
    .mini-cal td .today{outline:2px solid #e5e7eb;border-radius:8px}
    .mini-cal td .sel{background:#111827;color:#fff}

    /* סיכום יומי */
    .oc-day-summary{margin-top:14px;font-size:14px;color:#111827}
    .oc-day-summary .bar{height:8px;background:#f3f4f6;border-radius:999px;overflow:hidden;margin:8px 0}
    .oc-day-summary .bar>div{height:100%;background:#f59e0b;width:0%;transition:width .2s}

    /* סרגל עליון: תאריך + חיפוש מעוצב */
    .oc-date-nav{ display:flex; align-items:center; gap:10px; flex-wrap:wrap; }
    .oc-searchbox{
      position: relative; display:flex; align-items:center;
      border:1px solid #e5e7eb; background:#fbfbfc;
      border-radius:12px; padding-inline:12px; min-height:38px;
      transition: box-shadow .15s ease, border-color .15s ease, background .15s ease;
    }
    .oc-searchbox:hover{ background:#f7f7fb; }
    .oc-searchbox:focus-within{
      border-color:#cbd5e1;
      box-shadow: 0 0 0 3px rgba(14,165,233,.15);
      background:#fff;
    }
    .oc-searchbox .icon{
      width:18px; height:18px; opacity:.6; flex:0 0 auto;
      margin-inline-end:8px; /* תומך RTL/LTR */
      display:inline-block;
    }
    .oc-searchbox input{
      border:0; outline:0; background:transparent;
      width:220px; max-width:42vw; font-size:14px; padding:6px 0;
      color:#0f172a;
    }
    .oc-searchbox input::placeholder{ color:#94a3b8; }

    /* התאמות קטנות למסכים צרים */
    @media (max-width:600px){
      .oc-searchbox input{ width:160px; }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="oc-header">
    <div class="wrap">
      <div class="oc-title"><%= it.restaurant && it.restaurant.name ? it.restaurant.name : it.title %></div>
      <div class="oc-date-nav">
        <button id="btn-prev" aria-label="Previous day">◀</button>
        <div class="date-label" id="date-label">—</div>
        <button id="btn-next" aria-label="Next day">▶</button>
        <button id="btn-jump" aria-label="Jump to date" class="oc-jump">📅 בחר תאריך</button>
        <input type="date" id="datePicker" style="display:none" value="<%= it.date %>"/>

        <!-- שדה חיפוש מעוצב ליד התאריך -->
        <label class="oc-searchbox" for="daySearch" aria-label="Search in day">
          <span class="icon" aria-hidden="true">
            <!-- SVG זכוכית מגדלת -->
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="7"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </span>
          <input type="search" id="daySearch" placeholder="Search name"/>
        </label>
      </div>
    </div>
  </div>

  <!-- Layout -->
  <main class="oc-main">
    <div class="oc-layout">
      <!-- Sidebar (שמאל בפועל) -->
      <aside class="oc-sidebar" id="sidebar">
        <div class="oc-section-title">Calendar</div>
        <div class="mini-cal" id="mini-cal">
          <div class="hdr">
            <div class="nav">
              <button id="cal-prev" aria-label="Prev month">‹</button>
              <button id="cal-next" aria-label="Next month">›</button>
            </div>
            <div class="title" id="cal-title">—</div>
          </div>
          <table>
            <thead><tr id="cal-weekdays"></tr></thead>
            <tbody id="cal-body"></tbody>
          </table>
        </div>

        <div class="oc-section-title" style="margin-top:16px">Daily Summary</div>
        <div class="oc-day-summary" id="day-summary-box">
          <div id="day-summary-text">loading…</div>
          <div class="bar"><div id="day-summary-bar"></div></div>
        </div>
      </aside>

      <!-- Panel (ימין בפועל) -->
      <section class="oc-panel">
        <header>
          <div class="oc-cap" id="cap-line">Capacity: People — • Tables — • Step: —</div>
        </header>

        <div class="oc-slots" id="slots">
          <div class="oc-row oc-th">
            <div>Time</div>
            <div>Occupancy</div>
            <div class="oc-info">People • Tables • %</div>
          </div>
          <!-- rows injected by JS -->
        </div>

        <div class="oc-hint">Hint: Click a slot to manage customers</div>

        <div class="oc-summary" id="summary">
          Daily Summary — loading…
        </div>
      </section>
    </div>
  </main>

  <!-- Drawer -->
  <aside class="oc-drawer" id="drawer">
    <header>
      <div class="title" id="drawer-title">Customers</div>
      <button class="close" id="drawer-close">✕</button>
    </header>
    <div class="toolbar">
      <input type="search" id="drawer-search" placeholder="Search name in this slot"/>
      <button class="btn primary" id="btn-add">＋ Add customer</button>
    </div>
    <div class="body">
      <table class="tbl" id="drawer-table">
        <thead>
          <tr>
            <th>First Name</th><th>Last Name</th><th>Party sz</th><th>Status</th><th>Phone</th><th></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </aside>

  <script src="/static/js/owner_calendar.js" defer></script>
  <script>
    window.__OC__ = { rid: "<%= it.rid %>", date: "<%= it.date %>" };

    // "בחר תאריך" עליון
    (function () {
      const btnJump = document.getElementById('btn-jump');
      const picker = document.getElementById('datePicker');
      if (btnJump && picker) {
        btnJump.addEventListener('click', () => picker.showPicker ? picker.showPicker() : picker.click());
        picker.addEventListener('change', () => {
          const v = picker.value; if (!v) return;
          const url = new URL(window.location.href);
          url.searchParams.set('date', v);
          window.location.href = url.toString();
        });
      }
    })();
  </script>
</body>
</html>

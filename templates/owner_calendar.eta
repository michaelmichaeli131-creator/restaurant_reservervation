<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8" />
  <title><%= it.title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/static/css/owner_calendar.css" />
  <style>
    /* ××•×•×“× ×—×“-××©××¢×™×ª: Sidebar ×‘×©×××œ, Panel ×‘×™××™×Ÿ */
    .oc-layout{
      direction: ltr !important;          /* ××‘×˜×œ ×”×™×¤×•×š RTL ×‘×§×•× ×˜×™×™× ×¨ ×”×–×” ×‘×œ×‘×“ */
      display: grid !important;            /* ×›×¤×™×™×” ×¢×œ ×’×¨×™×“ ×’× ×× ×™×© flex ×—×™×¦×•× ×™ */
      grid-template-columns: 360px minmax(980px, 1fr) !important;
      grid-template-rows: auto;
      grid-column-gap: 16px; grid-row-gap: 16px;
      align-items: start; padding: 16px;
    }
    /* ××¦×™×‘×™× ××¤×•×¨×©×•×ª ××ª ×”×˜×•×¨×™× ×›×“×™ ×œ×¢×§×•×£ ×›×œ ×›×œ×œ ×—×™×¦×•× ×™ */
    .oc-sidebar{ grid-column: 1 / 2 !important; grid-row: 1 !important; }
    .oc-panel  { grid-column: 2 / 3 !important; grid-row: 1 !important; }

    @media (max-width: 900px){
      .oc-layout{
        grid-template-columns: 1fr !important;
        grid-template-rows: auto auto;
      }
      .oc-sidebar{ grid-column: 1 / -1 !important; grid-row: 2 !important; }
      .oc-panel  { grid-column: 1 / -1 !important; grid-row: 1 !important; }
    }

    .oc-panel{ overflow:auto; }
    .oc-slots{ min-width: 980px; } /* ×’×•×“×œ ×”×˜×‘×œ×” × ×©××¨ ×›××• ×©×‘×™×§×©×ª */

    .oc-sidebar{
      background:#fff;border:1px solid #e5e7eb;border-radius:12px;padding:12px;
    }
    .oc-section-title{font-weight:600;margin:8px 0 12px;}

    /* ×™×•××Ÿ ×—×•×“×©×™ */
    .mini-cal{user-select:none}
    .mini-cal .hdr{display:flex;align-items:center;justify-content:space-between;margin-bottom:8px}
    .mini-cal .hdr .nav{display:flex;gap:8px}
    .mini-cal .hdr button{border:1px solid #e5e7eb;background:#fafafa;border-radius:8px;padding:6px 10px;cursor:pointer}
    .mini-cal table{width:100%;border-collapse:collapse}
    .mini-cal th,.mini-cal td{text-align:center;padding:6px 0;width:14.285%}
    .mini-cal th{color:#6b7280;font-weight:600}
    .mini-cal td button{width:34px;height:34px;line-height:34px;border-radius:8px;border:none;background:transparent;cursor:pointer}
    .mini-cal td .out{opacity:.35}
    .mini-cal td .today{outline:2px solid #e5e7eb;border-radius:8px}
    .mini-cal td .sel{background:#111827;color:#fff}

    /* ×¡×™×›×•× ×™×•××™ */
    .oc-day-summary{margin-top:14px;font-size:14px;color:#111827}
    .oc-day-summary .bar{height:8px;background:#f3f4f6;border-radius:999px;overflow:hidden;margin:8px 0}
    .oc-day-summary .bar>div{height:100%;background:#f59e0b;width:0%;transition:width .2s}

    /* ×©×•×¨×ª ×ª××¨×™×š + ×—×™×¤×•×© ×œ××¢×œ×” */
    .oc-date-nav{ display:flex; align-items:center; gap:8px; flex-wrap:wrap; }
    .oc-top-search{ width: 220px; }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="oc-header">
    <div class="wrap">
      <div class="oc-title"><%= it.restaurant && it.restaurant.name ? it.restaurant.name : it.title %></div>
      <div class="oc-date-nav">
        <button id="btn-prev" aria-label="Previous day">â—€</button>
        <div class="date-label" id="date-label">â€”</div>
        <button id="btn-next" aria-label="Next day">â–¶</button>
        <button id="btn-jump" aria-label="Jump to date" class="oc-jump">ğŸ“… ×‘×—×¨ ×ª××¨×™×š</button>
        <input type="date" id="datePicker" style="display:none" value="<%= it.date %>"/>
        <input type="search" id="daySearch" class="oc-top-search" placeholder="Search name"/>
      </div>
    </div>
  </div>

  <!-- Layout -->
  <main class="oc-main">
    <div class="oc-layout">
      <!-- Sidebar (×©×××œ ×‘×¤×•×¢×œ) -->
      <aside class="oc-sidebar" id="sidebar">
        <div class="oc-section-title">Calendar</div>
        <div class="mini-cal" id="mini-cal">
          <div class="hdr">
            <div class="nav">
              <button id="cal-prev" aria-label="Prev month">â€¹</button>
              <button id="cal-next" aria-label="Next month">â€º</button>
            </div>
            <div class="title" id="cal-title">â€”</div>
          </div>
          <table>
            <thead><tr id="cal-weekdays"></tr></thead>
            <tbody id="cal-body"></tbody>
          </table>
        </div>

        <div class="oc-section-title" style="margin-top:16px">Daily Summary</div>
        <div class="oc-day-summary" id="day-summary-box">
          <div id="day-summary-text">loadingâ€¦</div>
          <div class="bar"><div id="day-summary-bar"></div></div>
        </div>
      </aside>

      <!-- Panel (×™××™×Ÿ ×‘×¤×•×¢×œ) -->
      <section class="oc-panel">
        <header>
          <div class="oc-cap" id="cap-line">Capacity: People â€” â€¢ Tables â€” â€¢ Step: â€”</div>
        </header>

        <div class="oc-slots" id="slots">
          <div class="oc-row oc-th">
            <div>Time</div>
            <div>Occupancy</div>
            <div class="oc-info">People â€¢ Tables â€¢ %</div>
          </div>
          <!-- rows injected by JS -->
        </div>

        <div class="oc-hint">Hint: Click a slot to manage customers</div>

        <div class="oc-summary" id="summary">
          Daily Summary â€” loadingâ€¦
        </div>
      </section>
    </div>
  </main>

  <!-- Drawer -->
  <aside class="oc-drawer" id="drawer">
    <header>
      <div class="title" id="drawer-title">Customers</div>
      <button class="close" id="drawer-close">âœ•</button>
    </header>
    <div class="toolbar">
      <input type="search" id="drawer-search" placeholder="Search name in this slot"/>
      <button class="btn primary" id="btn-add">ï¼‹ Add customer</button>
    </div>
    <div class="body">
      <table class="tbl" id="drawer-table">
        <thead>
          <tr>
            <th>First Name</th><th>Last Name</th><th>Party sz</th><th>Status</th><th>Phone</th><th></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </aside>

  <script src="/static/js/owner_calendar.js" defer></script>
  <script>
    window.__OC__ = { rid: "<%= it.rid %>", date: "<%= it.date %>" };

    // "×‘×—×¨ ×ª××¨×™×š" ×¢×œ×™×•×Ÿ
    (function () {
      const btnJump = document.getElementById('btn-jump');
      const picker = document.getElementById('datePicker');
      if (btnJump && picker) {
        btnJump.addEventListener('click', () => picker.showPicker ? picker.showPicker() : picker.click());
        picker.addEventListener('change', () => {
          const v = picker.value; if (!v) return;
          const url = new URL(window.location.href);
          url.searchParams.set('date', v);
          window.location.href = url.toString();
        });
      }
    })();
  </script>
</body>
</html>

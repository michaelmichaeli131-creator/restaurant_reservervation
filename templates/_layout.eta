<!doctype html>
<html lang="<%= it.lang || 'he' %>" dir="<%= it.dir || 'rtl' %>">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= it.title ? it.title + ' · SpotBook' : 'SpotBook' %></title>

  <!-- שמירת תאימות לעיצוב הישן -->
  <link rel="stylesheet" href="/static/styles.css"/>

  <!-- עיצוב כהה חדש של SpotBook -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/spotbook.css"/>

  <%~ it.head || '' %>
</head>
<body class="sb-body">
  <header class="sb-header">
    <div class="sb-container" style="display:flex;align-items:center;gap:12px">
      <!-- לוגו חדש במקום טיפוגרפיה -->
      <a class="brand" href="/" style="display:flex;align-items:center;gap:8px;text-decoration:none">
        <img src="/public/img/logo-spotbook.png" alt="SpotBook Logo" style="height:38px;width:auto;object-fit:contain"/>
        <noscript><span class="brand-text" style="color:var(--ink)">SpotBook</span></noscript>
      </a>

      <nav class="sb-nav" style="margin-inline-start:auto">
        <% if (it.user) { %>
          <!-- כפתור ניהול למסעדות -->
          <a class="btn primary" href="/owner">נהל מסעדה</a>

          <!-- תצוגת משתמש (שם פרטי + שם משפחה בלבד) -->
          <span class="user" style="color:var(--ink-muted)">
            מחובר/ת:
            <strong><%= [it.user.firstName, it.user.lastName].filter(Boolean).join(" ") %></strong>
          </span>

          <a class="btn ghost" href="/auth/logout">התנתקות</a>
        <% } else { %>
          <a class="btn ghost" href="/auth/login">התחברות</a>
          <a class="btn" style="border-color:transparent;background:var(--brand);color:var(--brand-ink)" href="/auth/register">הרשמה</a>
        <% } %>

        <!-- קישור Admin נשמר -->
        <a class="btn ghost" href="/admin/login">Admin</a>
      </nav>
    </div>
  </header>

  <main class="sb-container">
    <%~ it.body %>
  </main>

  <footer class="sb-footer">
    <p>© <%= new Date().getFullYear() %> SpotBook · כל הזכויות שמורות</p>
  </footer>

  <!-- שמירת תאימות לסקריפט הישן -->
  <script src="/static/app.js" defer></script>

  <!-- הזרקת סקריפטים נוספים לפי דף -->
  <% if (it.scripts) { it.scripts.forEach(function(src){ %>
    <script src="<%= src %>" type="module"></script>
  <% }) } %>
</body>
</html>

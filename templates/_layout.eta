<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= it.title || "GeoTable" %></title>
  <link rel="stylesheet" href="/static/styles.css"/>
  <style>
    :root{ --bg:#f7f7fb; --card:#fff; --border:#e5e7eb; --ink:#111; --muted:#6b7280; --brand:#6b7cff }
    html,body{height:100%}
    body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;background:var(--bg);color:var(--ink)}
    a{color:inherit;text-decoration:none}
    .container{max-width:960px;margin:0 auto;padding:16px}
    header.site{background:#fff;border-bottom:1px solid var(--border)}
    .site .container{display:flex;align-items:center;gap:16px}
    .brand{font-weight:800;letter-spacing:.2px}
    .spacer{flex:1}
    nav a{padding:8px 10px;border-radius:8px}
    nav a:hover{background:#f1f1f8}
    .btn{background:var(--brand);color:#fff;border:none;border-radius:10px;padding:8px 12px;cursor:pointer}
    .btn.secondary{background:#4b5563}
    .card{background:var(--card);border:1px solid var(--border);border-radius:12px;padding:16px;margin:16px 0}
    .muted{color:var(--muted)}
    .page-header h1{margin:0 0 6px}
    footer.site{border-top:1px solid var(--border);margin-top:24px;padding:16px 0;color:var(--muted);font-size:.9rem}
    /* טפסים כלליים */
    label{font-weight:600}
    input,select,textarea{padding:8px 10px;border:1px solid var(--border);border-radius:8px;font-size:1rem}
  </style>
</head>
<body>
  <header class="site">
    <div class="container">
      <a class="brand" href="/">GeoTable</a>
      <nav>
        <a href="/restaurants">מסעדות</a>
        <a href="/about">אודות</a>
      </nav>
      <div class="spacer"></div>
      <% if (it.user) { %>
        <span class="muted">שלום, <%= it.user.name || it.user.email || "משתמש/ת" %></span>
        <a class="btn secondary" href="/auth/logout" style="margin-inline-start:10px">התנתקות</a>
      <% } else { %>
        <a class="btn secondary" href="/auth/login">התחברות</a>
        <a class="btn" href="/auth/register" style="margin-inline-start:8px">הרשמה</a>
      <% } %>
    </div>
  </header>

  <main class="container">
    <!-- כאן מוזרק תוכן הדפים -->
    <%- it.body %>
  </main>

  <footer class="site">
    <div class="container">
      © <%= new Date().getFullYear() %> GeoTable · כל הזכויות שמורות
    </div>
  </footer>

  <!-- מקום לסקריפטים גלובליים -->
  <script>
    // דוגמת שיפור RTL ל-input[type="email"]
    document.querySelectorAll('input[type="email"]').forEach(el => el.dir = 'ltr');
  </script>
</body>
</html>

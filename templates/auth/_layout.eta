<!doctype html>
<!-- Keep legacy styles to avoid breaking existing pages -->
<link rel="stylesheet" href="/static/styles.css" />


<!-- Luxury Dark base -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/public/css/spotbook.css?v=<%= Date.now() %>"/>


<%~ it.head || '' %>
<style>
:root{
--ink:#e6e9ef; --ink-dim:#b5bdc9; --bg:#0b0d11; --panel:#12151b; --panel-2:#161a21; --brand:#7dd3fc; --brand-ink:#00121a;
--ok:#22c55e; --warn:#fbbf24; --err:#ef4444; --bd:#222834; --radius:16px; --shadow:0 8px 30px rgba(0,0,0,.35);
--focus:0 0 0 2px rgba(125,211,252,.65),0 0 0 6px rgba(125,211,252,.15);
}
*{box-sizing:border-box}
html,body{height:100%}
body{margin:0;background:radial-gradient(1200px 800px at 80% -10%, #0f172a 0%, #0b0d11 38%, #090c10 100%);
color:var(--ink);font-family:'Rubik',system-ui,-apple-system,'Segoe UI',Roboto,Helvetica,Arial,sans-serif;}
a{color:var(--brand);text-decoration:none}
a:hover{text-decoration:underline}


header.appbar{position:sticky;top:0;z-index:50;background:linear-gradient(180deg, rgba(10,13,18,.9), rgba(10,13,18,.6));backdrop-filter:saturate(140%) blur(8px);border-bottom:1px solid var(--bd)}
.appbar .wrap{max-width:980px;margin:0 auto;padding:14px 16px;display:flex;align-items:center;gap:12px}
.brand{display:flex;align-items:center;gap:10px}
.brand .dot{width:10px;height:10px;border-radius:999px;background:var(--brand);box-shadow:0 0 20px rgba(125,211,252,.9)}
.brand .name{font-weight:800;letter-spacing:.4px}
.grow{flex:1}


main.shell{min-height:calc(100vh - 68px);display:flex;align-items:center;justify-content:center;padding:24px}
.card{width:100%;max-width:420px;background:linear-gradient(180deg, rgba(22,26,33,.85), rgba(18,21,27,.9));
border:1px solid var(--bd);border-radius:var(--radius);box-shadow:var(--shadow)}
.card .hd{padding:20px 22px;border-bottom:1px solid var(--bd)}
.card .hd h1{margin:0;font-size:22px}
.card .bd{padding:22px}
.card .ft{padding:16px 22px;border-top:1px solid var(--bd);background:var(--panel)}


/* Forms */
.f{display:grid;gap:14px}
.row{display:grid;gap:10px}
.row.two{grid-template-columns:1fr 1fr}
label{font-size:12px;color:var(--ink-dim)}
input[type="text"], input[type="email"], input[type="password"], input[type="tel"]{
width:100%;padding:12px 14px;border-radius:12px;border:1px solid var(--bd);background:var(--panel);color:var(--ink);
}
input::placeholder{color:#7a8596}
input:focus{outline:none;box-shadow:var(--focus);border-color:#334155}


.btn{display:inline-flex;align-items:center;justify-content:center;gap:8px;padding:12px 14px;border-radius:12px;border:1px solid transparent;
background:linear-gradient(180deg,#a5e8ff,#7dd3fc);color:var(--brand-ink);font-weight:700;cursor:pointer}
.btn:hover{filter:brightness(.98)}
.btn.secondary{background:transparent;border-color:#2a3040;color:var(--ink)}


.hint{font-size:12px;color:var(--ink-dim)}
.alert{padding:12px 14px;border-radius:12px;border:1px solid;line-height:1.4}
.alert.err{border-color:rgba(239,68,68,.35);background:rgba(239,68,68,.08)}
.alert.ok{border-color:rgba(34,197,94,.35);background:rgba(34,197,94,.08)}


/* Auth links under cards */
.links{margin-top:14px;text-align:center;color:var(--ink-dim)}


@media (max-width:480px){
.card{max-width:100%}
.row.two{grid-template-columns:1fr}
}
</style>
</head>
<body>
<header class="appbar">
<div class="wrap">
<a class="brand" href="/">
<span class="dot" aria-hidden="true"></span>
<span class="name">SpotBook</span>
</a>
<div class="grow"></div>
<%~ it.nav || '' %>
</div>
</header>


<main class="shell">
<%~ it.body || '' %>
</main>


<%~ it.scripts || '' %>
<script src="/static/app.js" defer></script>
</body>
</html>
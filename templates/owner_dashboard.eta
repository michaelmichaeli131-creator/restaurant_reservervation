<% layout("_layout", it) %>

<section class="sb-owner container">
  <div class="card">
    <header class="owner-hd">
      <h1>×“×©×‘×•×¨×“ ×‘×¢×œ×™×</h1>
      <span class="muted">×©×œ×•×, <strong><%= it.user?.firstName || it.user?.username || "×‘×¢×œ×™×" %></strong></span>
    </header>

    <div class="owner-grid">
      <!-- ×¨×©×™××ª ××¡×¢×“×•×ª -->
      <div class="panel card">
        <h2 class="card-title">×”××¡×¢×“×•×ª ×©×œ×™</h2>

        <% if (it.restaurants && it.restaurants.length) { %>
          <ul class="list">
            <% it.restaurants.forEach(function(r){
                 const photos = Array.isArray(r.photos) ? r.photos : [];
                 const first = photos.length ? photos[0] : null;

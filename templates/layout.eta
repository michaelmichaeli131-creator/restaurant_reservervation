<!doctype html>
<html lang="he" dir="rtl">
  <head>
    <meta charset="utf-8" />
    <title><%= it.title || "GeoTable" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/static/styles.css" />
  </head>
  <body>
    <header class="site-header">
      <nav class="nav">
        <a class="brand" href="/">GeoTable</a>

        <div class="nav-links">
          <% if (it.user && it.user.role === "owner") { %>
            <a class="link" href="/owner">אזור מנהלים</a>
          <% } %>

          <% if (it.user) { %>
            <span class="user-chip">
              שלום, <strong><%= it.user.firstName || it.user.username || it.user.email %></strong>
            </span>
            <form class="inline" method="post" action="/logout">
              <button class="btn secondary" type="submit">התנתקות</button>
            </form>
          <% } else { %>
            <a class="link" href="/login">התחברות</a>
            <a class="link" href="/signup">הרשמה</a>
          <% } %>
        </div>
      </nav>
    </header>

    <main class="container">
      <%~ it.body %>
    </main>

    <footer class="site-footer">
      <small>© <%= new Date().getFullYear() %> GeoTable</small>
    </footer>
  </body>
</html>
